package criarTextos;

import java.util.Scanner;

public class ativi1 {

	public static void main(String[] args) {
		Scanner ent = new Scanner(System.in);
		
		String[] fora = {"E", "DO", "DA", "DAS", "DE", "DI", "DU"}; 
		
		String texto = new String();
		String[]palavras = texto.split("' '");
		char espaço = ' ';
		
		System.out.println("Digite um nome completo");
		texto = ent.nextLine().toUpperCase().trim();
		
		

		
		for(char let = 0 ; let < texto.length(); let++) {
			
			if(palavras == fora) {
				continue;									
		}
			else {
				System.out.println(palavras[0]);
			}
		}

	}
}
