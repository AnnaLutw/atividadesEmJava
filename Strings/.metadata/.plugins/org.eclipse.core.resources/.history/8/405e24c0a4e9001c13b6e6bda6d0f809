package criarTextos;

import java.util.Scanner;

public class ativi3 {

	public static void main(String[] args) {
		Scanner ent = new Scanner(System.in);


		System.out.println("data: ");
		String[] arrayData = ent.nextLine().trim().split("/");
		String resultado = "Você nasceu em ";
		
		//todos os meses do ano 
		String[] arrayMeses = {"janeiro", "fevereiro", "março", "abril", "maio", "junho", "julho", "agosto","setembro", "outubro", "novembro", "dezembro"};
		
		for(int i=0;i<arrayData.length;i++){
				if(i==0) {					
					resultado=resultado + arrayData[i];
				}
				else if(i==1) {
					int indiceMeses = Integer.valueOf(arrayData[i]);
					resultado=resultado +" de " + arrayMeses[indiceMeses-1];
				}
				else if(i==2) {
					resultado=resultado+ " de " + arrayData[i];
				}
		}
		System.out.print(resultado);
	}
}
