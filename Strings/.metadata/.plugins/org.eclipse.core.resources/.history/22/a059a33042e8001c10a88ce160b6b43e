package criarTextos;

import java.util.Scanner;

public class ativi1 {

	public static void main(String[] args) {
		Scanner ent = new Scanner(System.in);
		

		String texto = new String().trim();
			
		System.out.println("nome: ");
		texto = ent.nextLine().toUpperCase().trim();
		System.out.print(texto.charAt(0));

		for(char let = 0 ; let < texto.length(); let++) {
			
			if(texto.charAt(let) == ' ') {
				
				System.out.println(texto.charAt(let+1));
		}
				
			}
		}

	}
